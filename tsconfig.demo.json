{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./demo/dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "ng2-semantic-ui": ["./src/public"],
      "ng2-semantic-ui/locales": ["./src/behaviors/localization/locales"]
    },
    "types": [
      "prismjs"
    ]
  },
  "exclude": [
    "**/*.conf.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
