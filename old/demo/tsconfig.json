{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "paths": {
      "ng2-semantic-ui": ["../../src/public"],
      "ng2-semantic-ui/locales": ["../../src/behaviors/localization/locales"]
    },
    "types": [
      "prismjs"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
